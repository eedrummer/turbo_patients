<div class="row">
  <div class="col-lg-3">
    <h4>Patients <small>(sorted alphabetically)</small></h4>
    <ul class="nav nav-pills nav-stacked">
      <% @patients.each do |patient| -%>
      <li class="nav-item">
        <a href="/patients/<%= patient.id %>" class="nav-link <% if patient.id == params[:id]-%>active<% end -%>"><%= patient.last_name %>, <%= patient.first_name %></a>
      </li>
      <% end -%>
    </ul>
  </div>
  <div class="col-xs-9">
    <h4 class="card-title">BMI Calculations <small>(sorted by date)</small></h4>
    <ul>
      <% @bmis.each do |bmi| -%>
      <li class="bmi"
          data-date="<%= bmi[:effective_time] %>"
          data-bmi="<%= bmi[:bmi].round(2) %>"><%= bmi[:effective_time].to_date.to_formatted_s(:long) %>: <%= bmi[:bmi].round(2) %></li>
      <% end -%>
    </ul>
    <div id="chart" style="height: 400px; margin: 0 auto"></div>
  </div>


</div>
